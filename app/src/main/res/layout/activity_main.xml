<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/quest"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="104dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="107dp"
        android:background="@drawable/screenshot_2024_06_21_154813_removebg_preview" />

    <TextView
        android:id="@+id/su"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/quest"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:text="Fill Data"
        android:textColor="#0223FA"
        android:textSize="25sp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:hint="Your Name"
        android:background="@drawable/textback"
        android:layout_below="@+id/su"
        android:layout_marginTop="20dp"
        app:helperTextTextColor="@color/black"
        android:textColorHint="@color/black"
        app:hintTextColor="@color/black"
        android:layout_centerInParent="true"
        android:padding="15dp"
        android:id="@+id/name"/>
        <EditText
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:hint="Age"
        android:background="@drawable/textback"
        android:layout_below="@+id/name"
        android:layout_marginTop="20dp"
            app:helperTextTextColor="@color/black"
            android:textColorHint="@color/black"
            app:hintTextColor="@color/black"
        android:layout_centerInParent="true"
        android:padding="15dp"
        android:id="@+id/age"/>
    <EditText
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:hint="Email Id"
        android:background="@drawable/textback"
        android:layout_below="@+id/age"
        android:layout_marginTop="20dp"
        app:helperTextTextColor="@color/black"
        android:textColorHint="@color/black"
        app:hintTextColor="@color/black"
        android:layout_centerInParent="true"
        android:padding="15dp"
        android:id="@+id/email"/>
    <EditText
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:hint="Password"
        android:background="@drawable/textback"
        android:layout_below="@+id/email"
        android:layout_marginTop="20dp"
        app:helperTextTextColor="@color/black"
        android:textColorHint="@color/black"
        app:hintTextColor="@color/black"
        android:layout_centerInParent="true"
        android:padding="15dp"
        android:id="@+id/password"/>

    <Button
        android:id="@+id/sign_up"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_below="@+id/password"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:backgroundTint="#0449F8"
        android:text="Submit"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:cornerRadius="5dp" />



</RelativeLayout>